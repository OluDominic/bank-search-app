{
  "expo": {
    "name": "Naija Bank Finder",
    "slug": "naija-bank-finder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/banks-ngr-logo.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/banks-ngr-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A1A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.naijabankfinder.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/banks-ngr-logo.png",
        "backgroundColor": "#1A1A1A"
      },
      "package": "com.naijabankfinder.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
